# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/affiliate_dashboard

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=7d

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@youraffiliateplatform.com

# AWS S3 (Optional - for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# File Upload Configuration
MAX_FILE_SIZE=10000000
UPLOAD_PATH=uploads
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_VIDEO_TYPES=mp4,avi,mov,wmv,flv,webm

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your_session_secret_key

# Commission Settings
DEFAULT_COMMISSION_RATE=10
MINIMUM_PAYOUT=50
PAYOUT_SCHEDULE=monthly
PLATFORM_FEE_PERCENTAGE=5

# Tracking Settings
TRACKING_DOMAIN=yourdomain.com
CLICK_EXPIRY_DAYS=30
CONVERSION_EXPIRY_DAYS=90

# Analytics
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Feature Flags
ENABLE_REAL_TIME_TRACKING=true
ENABLE_FRAUD_DETECTION=true
ENABLE_AUTOMATIC_PAYOUTS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBHOOKS=true 