# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/dropshipping_builder

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=7d

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@yourdropshippingplatform.com

# AWS S3 (Optional - for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# File Upload Configuration
MAX_FILE_SIZE=10000000
UPLOAD_PATH=uploads
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_VIDEO_TYPES=mp4,avi,mov,wmv,flv,webm

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your_session_secret_key

# Automation Settings
AUTOMATION_ENABLED=true
PRICE_UPDATE_INTERVAL=3600000
INVENTORY_SYNC_INTERVAL=1800000
ORDER_PROCESSING_DELAY=300000

# Product Sourcing
ALIEXPRESS_API_KEY=your_aliexpress_api_key
AMAZON_API_KEY=your_amazon_api_key
SHOPIFY_API_KEY=your_shopify_api_key
WOOCOMMERCE_API_KEY=your_woocommerce_api_key

# Default Margins and Pricing
DEFAULT_MARKUP_PERCENTAGE=30
MINIMUM_MARKUP_PERCENTAGE=10
MAXIMUM_MARKUP_PERCENTAGE=200

# Inventory Settings
LOW_STOCK_THRESHOLD=10
OUT_OF_STOCK_THRESHOLD=0
AUTO_HIDE_OUT_OF_STOCK=true

# Order Processing
AUTO_FULFILL_ORDERS=true
REQUIRE_APPROVAL_FOR_ORDERS=false
ORDER_NOTIFICATION_EMAIL=true

# Analytics
GOOGLE_ANALYTICS_ID=your_google_analytics_id
FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# Feature Flags
ENABLE_REAL_TIME_UPDATES=true
ENABLE_AUTOMATION=true
ENABLE_PRODUCT_SOURCING=true
ENABLE_ORDER_FULFILLMENT=true
ENABLE_EMAIL_MARKETING=true
ENABLE_SOCIAL_MEDIA_INTEGRATION=true 